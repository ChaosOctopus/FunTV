<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guanzhu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.funtv.activity.GuanzhuActivity">

    <RelativeLayout
        android:background="@color/huibai"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <ImageView
            android:id="@+id/iv_back_gaunzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sobot_webview_toolsbar_back_disable"
            />
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/shenhei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/guanzhu_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
