<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.funtv.fragment.wode.WodeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:id="@+id/linear_center_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv_mine_fragment"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/img_profile_touxiang_default_logged"

                />
            <TextView
                android:id="@+id/text_dianji_myfragment"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击登录"
                android:layout_alignBottom="@id/iv_mine_fragment"
                android:layout_centerInParent="true"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/huibai"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/linear2_mine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">
                <ImageView
                    android:src="@mipmap/ic_xin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="我的关注"/>
                <ImageView
                    android:src="@mipmap/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/huibai"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/linear3_mine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">
                <ImageView
                    android:src="@mipmap/ic_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="观看历史"/>
                <ImageView
                    android:src="@mipmap/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/huibai"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/huibai"/>




        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
